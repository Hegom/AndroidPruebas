<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hector.apptablet.Adapter.visorImagen">

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView android:id="@+id/ivIcono"
            android:src="@drawable/shine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <TextView android:id="@+id/tvValoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola mundo"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".30"
        >
        <TextView
            android:id="@+id/tvNombreCancion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="hola mundo"/>
        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola mundo"/>
        <TextView
            android:id="@+id/tvAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola mundo"/>
        </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".30" >

        <TextView
            android:id="@+id/tvDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola mundo"/>
        <ImageView android:id="@+id/ivIconoSmall"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_delete"></ImageView>
        </LinearLayout>

</LinearLayout>
